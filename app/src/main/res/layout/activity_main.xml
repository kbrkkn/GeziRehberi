<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kubra.sessizeal.MainActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Ayarlar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_weight="0.70"
            app:srcCompat="@drawable/locasyon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/settings"
            android:text="Bulunduğunuz Lokasyona Erişim İzni" />

        <CheckBox
            android:id="@+id/checkBoxLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.21"
            android:onClick="locationPermissionClicked"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonLokasyonEkle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="lokasyonEkleButonuSecildi"
        android:text="Yeni Lokasyon Ekle" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="Lokasyonlar" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
